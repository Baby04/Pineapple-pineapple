{% extends 'base.html.twig' %}

{% block title %}
	Order form
<!--Order product:-->
	{#{{prod.productname}}#}

{% endblock %}

{% block stylesheets %}
	<style>
		.container {
			max-width: 25000px;
		}

		nth.1h-condensed {
			line-height: 1.25;
		}
	</style>
{% endblock %}

{% block body %}
	<br>
	<br>
	<div class="container bg-light">
		<div class="py-5 text-center">
			{% include "inc/logo.html.twig" %}

			<h2>
				<strong>Checkout form</strong>
			</h2>
			<p class="lead">Fill in your address and you are ready to check out your cart!!</p>

		</div>
		<div class="row">
			<div class="col-md-4 order-md-2 mb-4">
				<h4 class="d-flex justify-content-between align-items-center mb-3">
					<span class="text-muted font-weight-bold">
						<i class="fas fa-shopping-cart">
							Your cart</i>
					</span>

					<span class="badge  badge-secondary badge-light text-muted">

						{% set cart = app.session.get('cart')%}
						{{ cart |length}}
						items
					</span>


				</h4>

				<ul class="list-group mb-3 sticky-top">
					<li class="list-group-item d-flex justify-content-between 1h-condensed">
						<div>

							<h6 class="my-0">

								{% set cart = app.session.get('prod') %}

								{#{prod.productname|length}#}

							</h6>

							<small class="text-muted">Brief description</small>
						</div>

						<span class="text-muted">Price</span>
					</li>
					<li class="list-group-item d-flex justify-content-between 1h-condensed">
						<div>
							<h6 class="my-0">{% set cart = app.session.get('prod') %}

								{#{prod.productname|length}#}

							</h6>
							<small class="text-muted">Bref Des</small>
						</div>
						<span class="text-muted">Price</span>
					</li>
					<li class="list-group-item d-flex justify-content-between">
						<span>Total</span>
					</li>
				</ul>
			</div>
			<div class="col-md-8 order-md-1">
				<h4 class="mb-3 font-weight-bold">Shipping Address</h4>
				{{ form_start(form) }}

				<div class="form-group">
					<label for="">Fullname</label>
					{{ form_widget(form.fullName) }}

				</div>

				<div class="form-group">
					<label for="">Addressline</label>
					{{ form_widget(form.adressLine) }}

				</div>

				<div class="form-group">
					<label for="">City</label>
					{{ form_widget(form.city) }}

				</div>

				<div class="form-group">
					<label for="">Region</label>
					{{ form_widget(form.region) }}


				</div>

				<div class="form-group">
					<label for="">Contact</label>
					{{ form_widget(form.phonenumber) }}


				</div>

				<div class="form-group">
					<label for="">Delivery instructions</label>
					{{ form_widget(form.addDeliveryInstruction) }}


				</div>

				<hr class="mb-4">
				<button type="submit" class="btn btn-secondary disabled btn-lg btn-block mb-5">Check out</button>

				{{form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
