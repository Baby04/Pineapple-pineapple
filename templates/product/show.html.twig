{% extends 'admin/adminbase.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<br>
		<br>
		<br>
		<h1 class="text-center text-muted">Product
			{{product.id}}
		</h1>

		<br>


		<table class="table table-hover">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ product.id }}</td>
				</tr>
				<tr>
					<th>ProductName</th>
					<td>{{ product.productName }}</td>
				</tr>
				<tr>
					<th>ProductType</th>
					<td>{{ product.productType }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ product.price }}</td>
				</tr>
				<tr>
					<th>Quantity</th>
					<td>{{ product.quantity }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ product.description }}</td>
				</tr>
				<tr>
					<th>CoverImage</th>
					<td>{{ product.coverImage }}</td>
				</tr>
			</tbody>
		</table>

		<div class="row mb-2">
			<div class="col">
				<a href="{{ path('product_index') }}">
					<button class="btn btn-outline-primary">back to list</button>
				</a>
			</div>
			<div class="col">
				<a href="{{ path('product_edit', {'id': product.id}) }}">
					<button class="btn btn-outline-warning">
						<i class="fas fa-edit"></i>
						edit
					</button>
				</a>
			</div>
			<div class="col">
				{{ include('product/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
