{% extends 'admin/adminbase.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<br>
	<div class="container-fluid mt-5 mb-3">
		<h1 class="text-center text-muted">Product Management index</h1>
		<br>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>ProductName</th>
					<th>ProductType</th>
					<th>Price</th>
					<th>Quantity</th>
					<th>Description</th>
					<th>CoverImage</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr>
						<td>{{ product.id }}</td>
						<td>{{ product.productName }}</td>
						<td>{{ product.productType }}</td>
						<td>{{ product.price }}</td>
						<td>{{ product.quantity }}</td>
						<td>{{ product.description }}</td>
						<td>{{ product.coverImage }}</td>
						<td>
							<a href="{{ path('product_show', {'id': product.id}) }}">
								<button class="btn btn-outline-secondary">
									<i class="fas fa-eye"></i>
									show
								</button>
							</a>
							<br>
							<br>
							<a href="{{ path('product_edit', {'id': product.id}) }}">
								<button class="btn btn-outline-secondary">
									<i class="fas fa-edit"></i>
									edit
								</button>
							</a>

						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('product_new') }}">
			<button class="btn btn-outline-primary">Create new</button>
		</a>

	</div>
{% endblock %}
