{% extends 'base.html.twig' %}

{% block title %}Sign In
{% endblock %}
{#{% block stylesheets %}
	<style 	body {
		background: url("{{ asset('image/4.jpg') }}") no-repeat center center fixed;
		background-size: 100% 100%;
		background-position	
	</style>																																																								
{% endblock %}#}

{% block body %}
	<br>
	<br>
	<br>
	<div class="container-fluid mt-1 bg-light">
		<img class="d-block mx-auto mb-4" src="{{ asset ('image/P logo.png')}}" alt="" width="150" height="150">
		<br>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		<div class="row">

			<div class="col-md-3">&nbsp;</div>

			<div class="col-md-6">
				<div class="bg-light py-3 px-3">
					<i class="fas fa-users fa-2x fa-center">
						Sign in</i>
					<br>
					<br>
					<h3 class="text-center text-success text-muted">Use your Pineapple Pineaple Account</h3>
					<br><br>

					{% if hasError %}
						<div class="alert alert-danger">An error occured
							<br>
							email or password may be invalid
						</div>
					{% endif %}

					<form action="{{ path('account_login') }}" method="post">
						<div class="form-group">
							<label for="email">Email</label>
							<i class="fas fa-envelope"></i>
							<input type="text" name="_username" id="email" class="form-control" placeholder="Email Addresse..." required value "{{ username }}">
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<i class="fas fa-lock"></i>
							<input type="password" name="_password" id="password" placeholder="Password..." class="form-control" required>
						</div>
						<div class="d-flex justify-content-between ">

							<p class="text-primary text-left">
								<a href="{{ path('forgotten_password')}}">Forgot password?</a>

							</p>

							<button type="submit" class="btn btn-primary">
								<i class="fas fa-sign-in-alt"></i>
								Sign In
							</button>


						</div>
					</form>


				</div>

			</div>

		</div>

	</div>


{% endblock %}
