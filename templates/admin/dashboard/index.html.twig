{% extends 'admin/adminbase.html.twig' %}

{% block title %}âœ… Admin Dashboard
{% endblock %}


{% block body %}

	<div class="container-fluid alert alert-info">
		<br>
		<div class="row my-5">
			<div class="col">
				<div class="card bg-primary text-white mb-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-users fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.users}}
									Users</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card text-white bg-dark mb-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-box fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">
									{{stats.orders}}
									Orders
								</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card text-white bg-warning mb-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-store fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.products}}
									Products
								</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card text-white bg-success mb-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-comments fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.comments}}
									Ratings
								</h4>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col">
				<div class="text-white bg-success">

					<h2 class="alert-heading my-3 font-weight-bold">
						<i class="fas fa-arrow-up"></i>
						Best sales
					</h2>

					<table class="table table-hover text-white">
						<thead>
							<tr>
								<th>Product</th>
								<th>Customers</th>
								<th class="text-center">Rating</th>
							</tr>
						</thead>
						<tbody>
							{% for product in bestProducts %}
								<tr>
									<td>{{product.productName}}</td>
									<td>{{product.fullName}}</td>
									<td class="text-center">
										<span class="badge badge-dark">{{product.remark| number_format(1,",","")}}</span>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			<div class="col">
				<div class="text-white bg-danger">

					<h2 class="alert-heading my-3 font-weight-bold">
						<i class="fas fa-arrow-down"></i>
						Worst sales
					</h2>

					<table class="table table-hover text-white">
						<thead>
							<tr>
								<th>Product</th>
								<th>Customers</th>
								<th class="text-center">Rating</th>
							</tr>
						</thead>
						<tbody>
							{% for product in worstProducts %}
								<tr>
									<td>{{product.productName}}</td>
									<td>{{product.fullName}}</td>
									<td class="text-center">
										<span class="badge badge-dark">{{product.remark| number_format(1,",","")}}</span>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>

		</div>
	</div>
</div>{% endblock %}
